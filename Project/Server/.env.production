# =================================
# GRAINZILLOW PRODUCTION ENVIRONMENT
# =================================

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/grainzillow_prod
# Alternative: MONGODB_URI=mongodb://user:pass@host1:port1,host2:port2/grainzillow_prod?replicaSet=rs0

# Authentication & Security
JWT_SECRET=your-very-long-and-super-secure-jwt-secret-key-generated-with-openssl-rand-base64-64
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=12

# Frontend & CORS
FRONTEND_URL=https://grainzillow.com
CORS_ORIGINS=https://grainzillow.com,https://www.grainzillow.com,https://app.grainzillow.com

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Logging
LOG_LEVEL=warn
LOG_DIR=/var/log/grainzillow

# IoT & Device Configuration
DEVICE_COMMAND_TIMEOUT=30000
MAX_COMMAND_RETRIES=3
SENSOR_DATA_RETENTION_DAYS=365
AUTO_CONTROL_ENABLED=true

# Storage & Business
STORAGE_CAPACITY_BUFFER=15
DEFAULT_STORAGE_DURATION=90
MAX_STORAGE_DURATION=365

# File Upload
MAX_FILE_SIZE=5242880  # 5MB for production
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DIR=/var/uploads/grainzillow

# Monitoring
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true
ANALYTICS_RETENTION_DAYS=90

# External Services (Production)
WEATHER_API_KEY=prod-weather-api-key-here
TWILIO_ACCOUNT_SID=prod-twilio-account-sid
TWILIO_AUTH_TOKEN=prod-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
STRIPE_SECRET_KEY=sk_live_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_production_stripe_publishable_key

# Email Service
EMAIL_SERVICE=sendgrid
EMAIL_USER=apikey
EMAIL_PASS=your-sendgrid-api-key

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key

# Cache & Performance
REDIS_URL=redis://redis-server:6379
CACHE_TTL=3600
CLUSTER_MODE=true
CLUSTER_INSTANCES=auto

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true

# Maintenance
MAINTENANCE_MODE=false