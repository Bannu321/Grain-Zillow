# =================================
# GRAINZILLOW BACKEND CONFIGURATION
# =================================

# =================================
# SERVER CONFIGURATION
# =================================

# Application Environment: development, production, test
NODE_ENV=development

# Server Port
PORT=5000

# Server Host (for production)
HOST=0.0.0.0

# =================================
# DATABASE CONFIGURATION
# =================================

# MongoDB Connection URI
# Local: mongodb://localhost:27017/grainzillow
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/grainzillow
MONGODB_URI=mongodb://localhost:27017/grainzillow

# MongoDB Connection Options (optional)
# MONGODB_OPTIONS={}

# =================================
# AUTHENTICATION & SECURITY
# =================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Expiration Time
JWT_EXPIRES_IN=7d

# JWT Issuer
JWT_ISSUER=GrainZillow

# JWT Audience
JWT_AUDIENCE=grainzillow-users

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=12

# =================================
# FRONTEND & CORS CONFIGURATION
# =================================

# Frontend Application URL
FRONTEND_URL=http://localhost:3000

# Allowed CORS Origins (comma separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# RATE LIMITING CONFIGURATION
# =================================

# Rate Limit Window (milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Maximum Requests per Window
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Endpoint Limits
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# =================================
# LOGGING CONFIGURATION
# =================================

# Log Level: error, warn, info, debug
LOG_LEVEL=info

# Log File Directory
LOG_DIR=./logs

# =================================
# IOT & DEVICE CONFIGURATION
# =================================

# Device Command Timeout (milliseconds)
DEVICE_COMMAND_TIMEOUT=30000

# Maximum Command Retries
MAX_COMMAND_RETRIES=3

# Sensor Data Retention Days
SENSOR_DATA_RETENTION_DAYS=365

# Auto-control Enabled
AUTO_CONTROL_ENABLED=true

# =================================
# STORAGE & BUSINESS CONFIGURATION
# =================================

# Storage Capacity Buffer Percentage
STORAGE_CAPACITY_BUFFER=10

# Default Storage Duration (days)
DEFAULT_STORAGE_DURATION=90

# Maximum Storage Duration (days)
MAX_STORAGE_DURATION=365

# =================================
# NOTIFICATION CONFIGURATION
# =================================

# Email Service (future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Push Notification (future use)
FCM_SERVER_KEY=your-fcm-server-key

# =================================
# FILE UPLOAD CONFIGURATION
# =================================

# Maximum File Upload Size (bytes)
MAX_FILE_SIZE=5242880

# Allowed File Types
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Upload Directory
UPLOAD_DIR=./uploads

# =================================
# MONITORING & ANALYTICS
# =================================

# Health Check Interval (milliseconds)
HEALTH_CHECK_INTERVAL=30000

# Performance Monitoring Enabled
PERFORMANCE_MONITORING=true

# Analytics Data Retention (days)
ANALYTICS_RETENTION_DAYS=90

# =================================
# EXTERNAL SERVICES (FUTURE USE)
# =================================

# Weather API (for environmental predictions)
WEATHER_API_KEY=your-weather-api-key

# SMS Service (for alerts)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# =================================
# ADVANCED CONFIGURATION
# =================================

# Cluster Mode (for production)
CLUSTER_MODE=false
CLUSTER_INSTANCES=auto

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# API Version
API_VERSION=v1

# Maintenance Mode
MAINTENANCE_MODE=false