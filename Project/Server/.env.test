# =================================
# GRAINZILLOW TEST ENVIRONMENT
# =================================

# Server Configuration
NODE_ENV=test
PORT=5001
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/grainzillow_test

# Authentication & Security
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=8

# Frontend & CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Rate Limiting (Disabled for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_AUTH_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=error
LOG_DIR=./test-logs

# IoT & Device Configuration
DEVICE_COMMAND_TIMEOUT=5000
MAX_COMMAND_RETRIES=1
SENSOR_DATA_RETENTION_DAYS=1
AUTO_CONTROL_ENABLED=false

# Storage & Business
STORAGE_CAPACITY_BUFFER=0
DEFAULT_STORAGE_DURATION=7
MAX_STORAGE_DURATION=30

# File Upload
MAX_FILE_SIZE=2097152  # 2MB for testing
ALLOWED_FILE_TYPES=image/jpeg,image/png
UPLOAD_DIR=./test-uploads

# Testing Configuration
TEST_DATABASE_CLEANUP=true
TEST_TIMEOUT=30000
TEST_PARALLEL=false

# Mock Services
MOCK_EMAIL=true
MOCK_SMS=true
MOCK_PAYMENTS=true

# Test Data
SEED_TEST_DATA=true
TEST_DATA_SIZE=small

# Debug
DEBUG=false
VERBOSE_TESTS=false