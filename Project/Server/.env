# =================================
# GRAINZILLOW BACKEND CONFIGURATION
# =================================

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/grainzillow

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Frontend & CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# IoT & Device Configuration
DEVICE_COMMAND_TIMEOUT=30000
MAX_COMMAND_RETRIES=3
SENSOR_DATA_RETENTION_DAYS=90
AUTO_CONTROL_ENABLED=true

# Storage & Business
STORAGE_CAPACITY_BUFFER=10
DEFAULT_STORAGE_DURATION=90
MAX_STORAGE_DURATION=365

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DIR=./uploads

# Monitoring
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true