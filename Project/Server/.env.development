# =================================
# GRAINZILLOW DEVELOPMENT ENVIRONMENT
# =================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/grainzillow_dev

# Authentication & Security
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# Frontend & CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX_REQUESTS=20

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# IoT & Device Configuration
DEVICE_COMMAND_TIMEOUT=60000
MAX_COMMAND_RETRIES=5
SENSOR_DATA_RETENTION_DAYS=30
AUTO_CONTROL_ENABLED=true

# Storage & Business
STORAGE_CAPACITY_BUFFER=10
DEFAULT_STORAGE_DURATION=90
MAX_STORAGE_DURATION=365

# File Upload
MAX_FILE_SIZE=10485760  # 10MB for development
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,image/gif
UPLOAD_DIR=./uploads

# Monitoring
HEALTH_CHECK_INTERVAL=60000
PERFORMANCE_MONITORING=true
ANALYTICS_RETENTION_DAYS=30

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEV_ROUTES=true
SEED_DATABASE=true

# External Services (Mock/Test)
WEATHER_API_KEY=test-weather-api-key
TWILIO_ACCOUNT_SID=test-twilio-sid
TWILIO_AUTH_TOKEN=test-twilio-token
STRIPE_SECRET_KEY=sk_test_development_key

# Debug Options
DEBUG=true
DEBUG_DATABASE=false
DEBUG_REQUESTS=true